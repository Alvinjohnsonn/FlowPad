<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.staticconstants.flowpad.FlowPadController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="LOGIN">
        <font>
            <Font/>
        </font></Label>

    <TextField>
        <font>
            <Font size="20.0" />
        </font>
    </TextField>
    <PasswordField promptText="Password">
        <font>
            <Font size="20.0" />
        </font>
    </PasswordField>

    <Label fx:id="Login" />
    <Button fx:id="SubmitButton" defaultButton="true" onAction="#onSubmitButtonClick" text="Submit">
        <font>
            <Font size="18.0" />
        </font>
    </Button>

    <Label />

    <Button fx:id="RegisterAccountButton" onAction="#onRegisterAccountButtonClick" text="Register Account">
        <font>
            <Font size="14.0" />
        </font></Button>

</VBox>
