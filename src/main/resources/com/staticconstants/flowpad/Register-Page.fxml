<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="525.0" prefWidth="443.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.staticconstants.flowpad.RegisterPageController">
   <Pane prefHeight="458.0" prefWidth="382.0" style="-fx-border-color: #000000;">
      <children>

          <VBox alignment="CENTER" fillWidth="false" spacing="20.0" style="-fx-background-color: #def8f4;;">

              <padding>
                  <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
              </padding>

                      <Label alignment="CENTER" text="REGISTER YOUR ACCOUNT" textAlignment="CENTER">
                          <font>
                              <Font size="20.0" />
                          </font>
                      </Label>

                      <TextField alignment="CENTER" maxWidth="400" promptText="First Name">
                          <font>
                              <Font size="18.0" />
                          </font>
                      </TextField>
                      <TextField alignment="CENTER" maxWidth="400" promptText="Last Name">
                          <font>
                              <Font size="18.0" />
                          </font>
                      </TextField>
                      <TextField alignment="CENTER" maxWidth="400" promptText="Username">
                          <font>
                              <Font size="18.0" />
                          </font>
                      </TextField>
                      <PasswordField alignment="CENTER" maxWidth="400" promptText="Password">
                          <font>
                              <Font size="18.0" />
                          </font>
                      </PasswordField>

                      <HBox spacing="20.0">
                  <children>
                            <Button fx:id="BackButton" alignment="CENTER" onAction="#onBackButtonClick" text="Back" />
                            <Button fx:id="Register" alignment="CENTER" defaultButton="true" onAction="#onRegisterButtonClick" style="-fx-background-color: #a8e5e8;" text="Register">
                                <font>
                                    <Font size="17.0" />
                                </font>
                            </Button>
                  </children>
            </HBox>

              </VBox>
      </children>
   </Pane>
   <padding>
      <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
   </padding>


</AnchorPane>
